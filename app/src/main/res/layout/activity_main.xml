<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="408dp"
        android:layout_height="374dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/bc"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="sıfırla"
            android:text="C"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/bsil"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="sil"
            android:text="DEL"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/byuzde"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="yüzde"
            android:text="%"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/bbol"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="böl"
            android:text="/"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/b7"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="7"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/b4"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="4"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/b1"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="1"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/b0"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="0"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/b8"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="8"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/b6"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="6"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/b2"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="2"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/b5"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="5"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/b9"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="9"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/b3"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="Sayılar"
            android:text="3"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/bvirgül"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="sayılar"
            android:text=","
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/bcarp"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="çarpma"
            android:text="*"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/bcıkar"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="çıkarma"
            android:text="-"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btopla"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="toplama"
            android:text="+"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/bsonuc"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:onClick="sonuç"
            android:text="="
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>


    <EditText
        android:id="@+id/hesapText"
        android:layout_width="389dp"
        android:layout_height="70dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="0"
        android:inputType="text"
        android:textColorHint="#ECECEC"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sonucText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#FDFDFD"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hesapText"
        app:layout_constraintVertical_bias="0.0"
        tools:text="=5" />


</androidx.constraintlayout.widget.ConstraintLayout>